<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.vanniktech.emoji.EmojiTextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/instance_name" android:textSize="24sp"
            android:layout_marginStart="8dp" android:layout_marginTop="3dp"/>
    <com.vanniktech.emoji.EmojiTextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/domain"
            android:layout_marginStart="8dp" android:layout_marginTop="3dp"
            android:layout_below="@id/instance_name"/>
    <View
            android:id="@+id/horizon-line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/domain"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"/>

</RelativeLayout>